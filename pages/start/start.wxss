.banner{
    width:100%;
    height: 480rpx;
}
.banner image{
    width: 100%;
    height: 480rpx;
    display: block;
}
.tool-bar{
    margin-top: 10px;
    width: 100%;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}
.tool-bar image{
    display: block;
    width: 120rpx;
    height: 120rpx;
}
.tool-bar .tool-list{
    font-size: 12px;
    line-height: 24px;
    text-align: center;
}
.seckill{
    margin: 10px 0 0;
    width: 100%;
    display: flex;
    justify-content: space-around;  
    transition: 0.3;
}
.little{
    font-size: 18px;
    font-weight: bold;
    color: red;
    text-shadow: 0 0 3px red;
    animation: seckill 3s infinite; 
}
@keyframes seckill{
    0%,100%{
        transform: scale(0.8);
    }
    50%{
        transform: scale(1);
    }
}
.new-year{
    font-size: 14px;
    animation: newYear 1s infinite; 
}
@keyframes newYear{
    0%,100%{
        transform: rotate(0deg);
        transform-origin: center;
    }
    50%{
        transform: rotate(-5deg);
        transform-origin: center;
    }
    25%,75%{
        transform: rotate(5deg);
        transform-origin: center;
    }
}
/*滚动栏*/
.scroll-view{
    width: 100%;
}
.goods-list{
    float: left;
    margin-left: 10px;
    margin-top: 20px;
    width: 200rpx;
    overflow: hidden;
}
.goods-img{
    width: 200rpx;
    height: 200rpx;
    border-radius: 20px;
}
.price{
    font-size: 16px;
    color: #D13844;
    text-align: center;
    font-weight: bold;
    line-height: 20px;
}
.price-rmb{
    font-size: 12px;
}
.old-price{
    font-size: 12px;
    line-height: 16px;
    color: #666;
    text-align: center;
    text-decoration: line-through;
}
.wx-swiper-dot::before{
    color: white;
    font-size: 30px;
}
.wx-swiper-dot-active::before{
    color: #000; 
}